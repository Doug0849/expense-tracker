<div class="container">
  <div id="display" class="container d-flex flex-column align-items-center mt-3 w-100">
    <div class="category-container row col-12">
      <div class="col-2"></div>
      <select id="category" name="category" class="col-6">
        <option value="">類別</option>
        <option value="1">家居物業</option>
        <option value="2">交通出行</option>
        <option value="3">休閒娛樂</option>
        <option value="4">餐飲食品</option>
        <option value="5">其他</option>
      </select>
      <div class="col-4"></div>
    </div>
    <div class="totalAmount-container row col-12 mt-2 mb-1">
      <div class="col-2"></div>
      <div class="countText col-2 mt-3 fs-3 fw-bold text-secondary">總金額</div>
      <div id="totalAmount" class="totalAmount col-4 mt-3 fw-bold text-end">123456</div>
      <div class="col-4"></div>
    </div>
    {{#each records}}
    <div class="expense-item-container col-12 mb-1 h-75">
      <div class="expense-item row">
        <div class="col-2"></div>
        <div class="display-item col-6">
          <div class="row g-0 justify-content-start ms-2">
            <div class="col-1 d-flex justify-content-center align-items-center">
              <i class="fa-solid fa-house fa-2xl "></i>
            </div>
            <div class="d-flex ms-3 mt-2 col-6">
              <div class="container">
                <p class="expanse-title m-0 fs-2 fw-bold">{{this.name}}</p>
                <p class="date-text">{{this.date}}</p>
              </div>
            </div>
            <div class="d-flex align-items-center justify-content-end col-4">
              <div class="text-cost fs-3">{{this.amount}}</div>
            </div>
          </div>
        </div>
        <a href="" id="btn-modify" class="btn btn-success col-1 ms-1">修改</a>
        <a href="" id="btn-delete" class="btn btn-danger col-1 ms-1">刪除</a>
      </div>
    </div>
    {{/each}}
    <a href="/record" class="btn btn-primary col-6 mt-1 mb-1 h-75">新增一筆支出</a>
  </div>